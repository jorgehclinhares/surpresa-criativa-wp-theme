{% extends "base.twig" %}

{% block content %}
  <h1>Últimos Posts</h1>

  {% if posts %}
    <ul>
      {% for post in posts %}
        <li>
          <a href="{{ post.link }}">{{ post.title }}</a>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Nenhum conteúdo encontrado.</p>
  {% endif %}
{% endblock %}
