<section class="search-container">
	<div class="search-container__content">
		<div class="search-container__header">
			<h2>Resultados da pesquisa por: "{{ search_query }}"</h2>
		</div>

		<div class="search-container__results">
			{% if posts %}
				{% for post in posts %}
					<div class="card mb-3">
						<div class="row g-0">
							<div class="col-md-2">
								<img src="{{ post.thumbnail.src('thumbnail') }}" class="img-fluid rounded-start" alt="{{ post.title }}">
							</div>
							<div class="col-md-10">
								<div class="card-body">
									<h2 class="card-title">{{ post.title }}</h2>
									<p class="card-text">
										{% if post.excerpt|length > 0 %}
											{{ post.excerpt|striptags|truncate(60, '...') }}
										{% elseif post.content %}
											{{ post.content|striptags|truncate(60, '...') }}
											{% else %}
										{% endif %}
									</p>
									<p class="card-text">
										<small class="text-body-secondary">{{ post.date|date("j M Y") }}</small>
									</p>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			{% else %}
				<p>Nenhum resultado encontrado para sua busca.</p>
			{% endif %}
		</div>
	</div>
</section>
