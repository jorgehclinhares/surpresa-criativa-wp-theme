<section class="home-posts">
	<div class="home-posts__header">
		<h3>Ãšltimos posts</h3>
	</div>
	<div class="home-posts__list">
		{% for post in posts %}
			<div class="home-posts__post">
				<a href="{{ post.link }}">
					<div class="home-posts__post-image" style="background-image: url({{ post.thumbnail }})"></div>
					<p class="home-posts__post-date">{{ post.date|date("j M Y") }}</p>
					<div class="home-posts__post-title">
						<h2>{{ post.title }}</h2>
						<img src="{{ template_directory_uri }}/assets/images/svgs/arrow-link-open.svg" alt="{{ post.title }}" class="home-posts__thumbnail"/>
					</div>
					<p class="home-posts__post-excerpt">
						{% if post.excerpt|length > 0 %}
							{{ post.excerpt|striptags|truncate(60, '...') }}
						{% elseif post.content %}
							{{ post.content|striptags|truncate(60, '...') }}
							{% else %}
						{% endif %}
					</p>
				</a>
				{% if post.tags|length > 0 %}
					<div class="home-posts__post-tags">
						{% for tag in post.tags %}
							{% if tag.name|trim is not empty %}
								<a href="{{ tag.link }}">{{ tag.name }}</a>
							{% endif %}
						{% endfor %}
					</div>
				{% endif %}
			</div>
		{% endfor %}
	</div>
</section>
